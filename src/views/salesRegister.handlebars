<div class="card mb-5">
  <div class="card-body">
    <div class="card-titulo d-flex flex-wrap mb-4 align-end justify-content-between">
      <div class="item w-100">
        <h4 class="mb-4">
          <a class="text-dark text-decoration-none" href="/sales/list">Vendas </a> /
          <a class="text-dark text-decoration-none" href="/sales/register"><small>Cadastro</small></a>
        </h4>
      </div>
      <div class="item w-100">
        <form id="form-sales" name="form-sales" action="" method="POST">
          <div class="col-lg-12 d-flex flex-wrap p-0">
            <div class="col-lg-6 col-md-6 mb-3 p-0">
              <label for="labelcodprod" class="form-label">Nome Produto</label>
              <div class="input-group mb-0">
                <input type="text" class="form-control" id="nomeProd" name="nomeProd" aria-describedby="Nome Produto">
                <div class="input-group-prepend">
                  <img role="button" id="search" class="input-group-text" src="/assets/image/icons/search.svg"
                    alt="Search">
                </div>
              </div>
              <ul id="listProduct" class="product p-0"></ul>
            </div>


            <div class="col-lg-12 col-md-12 mb-3 p-0">
              <table class="table table-striped" id="content" name="content">
                <thead class="thead-light">
                  <tr>
                    <th class="text-center" scope="col">Produto</th>
                    <th class="text-center" scope="col">Código Produto</th>
                    <th class="text-center" scope="col">Preço</th>
                    <th class="text-center" scope="col">Quantidade</th>
                    <th class="text-center" scope="col">Opções</th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
              </table>
            </div>

            <div class="d-flex align-content-start mt-2 col-lg-12 col-md-12 mb-3 p-0">
              <div class="col-lg-6 col-md-6 p-0">
                <button type="button" id="finalizesales" name="finalizesales" class="btn btn-success mr-2">Finalizar Venda</button>
                <button type="button" id="cancelsales" name="finalizesales" class="btn btn-danger">Cancelar Venda</button>
              </div>
              <div class="col-lg-6 col-md-6 text-right">
                <strong><span class="total">Total:</span></strong>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>